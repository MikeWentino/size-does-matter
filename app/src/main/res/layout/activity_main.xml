<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/the_layout"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take picture"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="createCameraIntent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scale length: \nObject length:"
        android:id="@+id/textView"
        android:layout_below="@+id/ScaleSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="50dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScaleSwitch"
        android:textOff="Scale"
        android:textOn="Object"
        android:showText="false"
        android:splitTrack="false"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:enabled="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Scale"
        android:id="@+id/ScaleSwitchText"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView"
        android:layout_alignBottom="@+id/ScaleSwitch" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="theperfectfit.sizedoesmatter.TouchImageView"
        android:id="@+id/MainImageView"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#000000" />

    <theperfectfit.sizedoesmatter.touchOverlay
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TouchOverlay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />
</RelativeLayout>
